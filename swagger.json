{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Welcome Artists DataBase",
        "description": "API compiling female brazilian artists",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "node-api-showcase.herokuapp.com",
    "basePath": "/",
    "tags": [
        {
            "name": "Artists",
            "description": "Manage the artists"
        },
        {
            "name": "States",
            "description": "List brazilian States"
        },
        {
            "name": "Authentication",
            "description": "API for login and new users"
        }
    ],
    "schemes": ["https", "http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/artist": {
            "get": {
                "tags": ["Artists"],
                "summary": "Return all artists",
                "responses": {
                    "200": {
                        "description": "Listing all artists",
                        "schema": {
                            "$ref": "#/definitions/Artists"
                        }
                    }
                }
            },
            "post": {
                "summary": "Add a new artist",
                "tags": ["Artists"],
                "parameters": [
                    {
                        "name": "Artist",
                        "in": "body",
                        "description": "New Artist to be added",
                        "schema": {
                            "$ref": "#/definitions/Artist"
                        }
                    },
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "Auth token"
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "201": {
                        "description": "New artist added",
                        "schema": {
                            "$ref": "#/definitions/Artist"
                        }
                    }
                }
            }
        },
        "/artist/state/{UF}": {
            "parameters": [
                {
                    "name": "UF",
                    "in": "path",
                    "required": true,
                    "description": "State ID",
                    "type": "string"
                }
            ],
            "get": {
                "tags": ["Artists"],
                "summary": "Return all artists of chosen state",
                "responses": {
                    "200": {
                        "description": "Artists found",
                        "schema": {
                            "$ref": "#/definitions/Artists"
                        }
                    }
                }
            }
        },
        "/artist/tags/{TAG}": {
            "parameters": [
                {
                    "name": "TAG",
                    "in": "path",
                    "required": true,
                    "description": "Array of strings",
                    "type": "array",
                    "items": {"type": "string"}
                }
            ],
            "get": {
                "tags": ["Artists"],
                "summary": "Return all artists with chosen tags",
                "responses": {
                    "200": {
                        "description": "Artists found",
                        "schema": {
                            "$ref": "#/definitions/Artists"
                        }
                    }
                }
            }
        },
        "/artist/name/{NAME}": {
            "parameters": [
                {
                    "name": "NAME",
                    "in": "path",
                    "required": true,
                    "description": "artist's name",
                    "type": "string"
                }
            ],
            "get": {
                "tags": ["Artists"],
                "summary": "Return artist by name",
                "responses": {
                    "200": {
                        "description": "Artist found",
                        "schema": {
                            "$ref": "#/definitions/Artists"
                        }
                    }
                }
            }
        },
        "/artist/{ID}": {
            "parameters": [
                {
                    "name": "Artist ID",
                    "in": "path",
                    "required": true,
                    "description": "Artist's ID",
                    "type": "number"
                }
            ],
            "put": {
                "summary": "Updates",
                "tags": ["Artists"],
                "parameters": [
                    {
                        "name": "Artist",
                        "in": "body",
                        "description": "New artist data",
                        "schema": {
                            "$ref": "#/definitions/Artist"
                        }
                    },
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "Auth token"
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Artist updated",
                        "schema": {
                            "$ref": "#/definitions/Artist"
                        }
                    }
                }
            }
        },
        "/uf": {
            "get": {
                "tags": ["States"],
                "summary": "Return all states",
                "responses": {
                    "200": {
                        "description": "States found",
                        "schema": {
                            "$ref": "#/definitions/Ufs"
                        }
                    }
                }
            }
        },
        "/uf/{UF}": {
            "parameters": [
                {
                    "name": "UF",
                    "in": "path",
                    "required": true,
                    "description": "state's ID",
                    "type": "number"
                }
            ],
            "get": {
                "tags": ["States"],
                "summary": "Return a state",
                "responses": {
                    "200": {
                        "description": "State Found",
                        "schema": {
                            "$ref": "#/definitions/Uf"
                        }
                    }
                }
            }
        },
        "/auth/verify": {
            "get": {
                "summary": "Verify token's autheticity",
                "tags": ["Authentication"],
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "Token de autenticação"
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Message"
                    }
                }
            }
        },
        "/auth": {
            "post": {
                "summary": "User login",
                "tags": ["Authentication"],
                "parameters": [
                    {
                        "name": "Login",
                        "in": "body",
                        "description": "User's email and password",
                        "schema": {
                            "$ref": "#/definitions/Login"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "User data",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "summary": "New Users",
                "tags": ["Authentication"],
                "parameters": [
                    {
                        "name": "Register new user",
                        "in": "body",
                        "description": "User's data",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "User data",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Artist": {
            "required": ["name", "instagram_url", "instagram_username", "estado"],
            "properties": {
                "id": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "instagram_url": {
                    "type": "string"
                },
                "instagram_username": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                },
                "tags": {
                    "type": "string"
                },
                "estado": {
                    "type": "number"
                }
            }
        },
        "Artists": {
            "type": "array",
            "$ref": "#/definitions/Artist"
        },
        "Uf": {
            "properties": {
                "id": {
                    "type": "number"
                },
                "codigoUf": {
                    "type": "number"
                },
                "nome": {
                    "type": "string"
                },
                "uf": {
                    "type": "string"
                },
                "regiao": {
                    "type": "number"
                }
            }
        },
        "Ufs": {
            "type": "array",
            "$ref": "#/definitions/Uf"
        },
        "Login": {
            "required": ["email", "password"],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": { "type": "string" }
            }
        },
        "User": {
            "properties": {
                "token": { "type": "string" },
                "user": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "number" },
                        "nome": { "type": "string" },
                        "email": { "type": "string" },
                        "password": { "type": "string" }
                    }
                }
            }
        }
    }
}
